{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        <h2>My To do List</h2>
        <form method="post" action="{{ path('create_task') }}">
            <input name="title" type="text" id="title" placeholder="Task title..." />
            <button type="submit" class="addBtn">Add a Task</button>
        </form>
    </div>

    <div class="done">
        <h3>Tasks</h3>
    </div>
    <ul>
        {% for task in tasks %}
            {% if task.status == 0 %}
                <li>
                    <a href="{{ path('switch_status', {'id':task.id}) }}"><span class="task-list-item">{{ task.title }}</span></a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <div class="done">
        <h4>Done</h4>
    </div>
    <ul>
        {% for task in tasks %}{% if task.status == 1 %}
                <li {% if task.status %} class="checked" {% endif %}>
                    <a href="{{ path('switch_status', {'id':task.id}) }}"><span class="task-list-item">{{ task.title }}</span></a>
                    <a onclick="return confirm('Are you sure to delete?')" href="{{ path('task_delete', {'id':task.id}) }}"><span class="close">X</span></a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}
